import java.util.*;
import java.io.*;
public class Main {
 
    
    public static long factorial(int n) {
        
        if (n == 0 || n == 1) {
            return 1;
        }
        
        
        return n * factorial(n - 1);
    }
    
    
    public static void main(String[] args) {

        int[] numbers = {0, 1, 5, 7, 10};
        
        for (int num : numbers) {
            System.out.println("Factorial of " + num + " is: " + factorial(num));
        }
    
}
}
